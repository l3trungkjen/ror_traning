<%= form_for :entry, :html => { class: 'form-signup' }, method: :patch, url: entry_path(@entry) do |f| %>
    <h2>Update Entries</h2>
    <% if @entry.errors.any? %>
        <% @entry.errors.full_messages.each do |message| %>
            <p class="bg-danger"><%= message %></p>
        <% end %>
    <% end %>
    <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Input title...' %>
    </div>
    <div class="form-group">
        <%= f.label :Body %>
        <%= f.text_area :body, class: 'form-control', placeholder: 'Input body...' %>
    </div>
    <%= f.submit 'Update', class: 'btn btn-success' %>
<% end %>