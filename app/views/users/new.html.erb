<%= form_for :user, :html => { class: 'form-signup' }, method: 'post', url: users_path do |f| %>
    <h2>Sign up</h2>
    <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |message| %>
            <p class="bg-danger"><%= message %></p>
        <% end %>
    <% end %>
    <div class="form-group">
        <%= f.label :Email %>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Input email...' %>
    </div>
    <div class="form-group">
        <%= f.label :Password %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Input password...' %>
    </div>
    <%= f.submit "Create", class: 'btn btn-success' %>
<% end %>